<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Banking Web Application</display-name>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlet Mappings for JSP Pages -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <jsp-file>/Signupjsp.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TempServlet</servlet-name>
        <jsp-file>/TEMP.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>TempServlet</servlet-name>
        <url-pattern>/temp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <jsp-file>/transaction.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/transaction</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TransactionDetailsServlet</servlet-name>
        <jsp-file>/transactionDetails.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransactionDetailsServlet</servlet-name>
        <url-pattern>/transaction-details</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserBalanceServlet</servlet-name>
        <jsp-file>/user_Balance.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserBalanceServlet</servlet-name>
        <url-pattern>/user-balance</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserDetailsServlet</servlet-name>
        <jsp-file>/userDetails.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserDetailsServlet</servlet-name>
        <url-pattern>/user-details</url-pattern>
    </servlet-mapping>

</web-app>
